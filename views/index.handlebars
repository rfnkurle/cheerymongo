


<!--Homepage-->
<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> The Onion Mongo Scraper</h1>
        </div>
        <header id="masthead">
    
      <nav class="center">
        <a href="http://localhost:8080"><button type="button" id ="button"class="btn btn-primary">Home</button></a>
        <a href="http://localhost:8080/article"><button type="button" id="button" class="btn btn-primary scrape-btn">Scrape this Mother.</button></a>
        <a href="http://localhost:8080/savedarticles"><button type="button" id="button" class="btn btn-primary scrape-btn">Saved Articles.</button></a>
      </nav>
    </div>
    <i class="fas fa-wind fa-4x"></i>
  </header>
    
   
    </div>
    {{#each results}}
  <div class="card border-primary mb-3">
    <div class="card-header">
      <h4>
        <div class="row">
          <div class="col-md-10">
            <a href={{this.link}}>
              {{this.title}}
            </a>
          </div>
          <div class="col-md-2">
            {{#if saved}}
              <a class="btn btn-primary delArticle" data-id="{{_id}}">Delete Article</a>
              <a class="btn btn-primary note" data-id="{{_id}}" data-toggle="modal" data-target="#notes-modal">Comments</a>
            {{else}}
              <a class="btn btn-primary save" data-title="{{title}}" data-link="{{this.link}}" data-summary="{{this.summary}}">Save Article</a>
            {{/if}} 
          </div> 
        </div>
      </h4>
    </div>
    <div class="card-body">
      
      <p class="summary">{{this.summary}}</p>
    </div>
  </div> 
{{/each}}
